<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pickture001"
    android:scaleType="fitXY"  >
    
    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <Button 
        android:id="@+id/left_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/icon_search" />
    
    <TextView
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="24sp"
        android:text="随便吧" />
    
    <Button
        android:id="@+id/right_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/icon" />
    

</LinearLayout>
    
    
    
    <ImageView 
            android:id="@+id/left_picture"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/icon_discover" />
    <TextView
            android:id="@+id/today_wendu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/left_picture"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    <TextView
        	android:id="@+id/left_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/today_wendu"
            android:textColor="#a9b7b7" />
    
    <ImageView 
            android:id="@+id/right_picture"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="70dp"
            android:layout_toRightOf="@id/left_day"
            android:src="@drawable/icon_cart" />
    
    <TextView
            android:id="@+id/tomorrow_wendu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/right_picture"
            android:layout_marginLeft="15dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    
    <TextView
        	android:id="@+id/right_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tomorrow_wendu"
            android:textColor="#a9b7b7" />
            
    <ImageView 
        android:id="@+id/current_picture1"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_above="@id/left_picture"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/icon_cartfill_press"/>
            
    <TextView 
        android:id="@+id/current_fengli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/current_picture1"
        android:layout_marginBottom="40dp"
        android:layout_above="@id/left_picture"
        android:textColor="#FFFFFF" />
    
    <ImageView 
        android:id="@+id/current_picture2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/icon_hot_press"
        android:layout_toRightOf="@id/current_fengli"
        android:layout_above="@id/left_picture"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="15dp" />
    
    <TextView
        android:id="@+id/current_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_above="@id/left_picture"
        android:layout_toRightOf="@id/current_picture2"
        android:layout_marginBottom="8dp"
        android:textColor="#a9b7b7" />

    <TextView
        android:id="@+id/current_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/current_wendu"
        android:layout_alignBottom="@+id/current_wendu"
        android:layout_alignLeft="@+id/current_tip"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/current_wendu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/current_tip"
        android:layout_alignLeft="@+id/current_fengli"
        android:textColor="#FFFFFF"
        android:textSize="80dp" />
    
    <TextView
        android:id="@+id/current_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true" />

</RelativeLayout>
