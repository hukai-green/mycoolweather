<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pickture001"
    android:scaleType="fitXY"  >
    
    
    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
        
    <Button 
        android:id="@+id/left_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/icon_search" />
    
    <TextView
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"/>
    
    <Button
        android:id="@+id/right_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/icon" />
    

</LinearLayout>
    
    
    
    <ImageView 
            android:id="@+id/left_picture"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true" />
    <TextView
            android:id="@+id/today_wendu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/left_picture"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    <TextView
        	android:id="@+id/left_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="13dp"
            android:layout_toRightOf="@id/today_wendu"
            android:text="@string/today"
            android:textColor="#a9b7b7" />
    
    <ImageView 
            android:id="@+id/right_picture"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_above="@id/left_picture" />
    
    <TextView
            android:id="@+id/tomorrow_wendu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/right_picture"
            android:layout_above="@id/today_wendu"
            android:layout_marginLeft="15dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    
    <TextView
        	android:id="@+id/right_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/left_day"
            android:layout_alignLeft="@id/left_day"
            android:layout_marginBottom="13dp"
            android:layout_toRightOf="@id/tomorrow_wendu"
            android:text="@string/tomorrow"
            android:textColor="#a9b7b7" />
            
    <ImageView 
        android:id="@+id/current_picture1"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_above="@id/left_picture"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="70dp"
        android:src="@drawable/icon_discover"/>
            
    <TextView 
        android:id="@+id/current_fengli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/current_picture1"
        android:layout_marginBottom="70dp"
        android:layout_above="@id/left_picture"
        android:textColor="#FFFFFF" />
    
    <ImageView 
        android:id="@+id/current_picture2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/icon_hot"
        android:layout_toRightOf="@id/current_fengli"
        android:layout_above="@id/left_picture"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="15dp" />
    
    <TextView
        android:id="@+id/current_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_above="@id/left_picture"
        android:layout_toRightOf="@id/current_picture2"
        android:layout_marginBottom="54dp"
        android:textColor="#FFFFFF" />
    <TextView
        android:id="@+id/current_wendu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/current_fengli"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="#FFFFFF"
        android:textSize="80dp" />

    <TextView
        android:id="@+id/current_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/current_wendu"
        android:layout_above="@id/current_picture2"
        android:layout_marginBottom="38dp"
        android:textColor="#FFFFFF" />

    
    <TextView
        android:id="@+id/current_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_alignParentRight="true" />
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        
        
        <TextView
        android:id="@+id/tongbu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="50sp"
        android:textColor="#FFFFFF" />
        
    </LinearLayout>
    <Button 
        android:id="@+id/other"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/icon_home"
        android:layout_alignBottom="@id/left_picture" />

</RelativeLayout>
